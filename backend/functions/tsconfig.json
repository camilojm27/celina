{
  "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "resolveJsonModule": true,
      "allowJs": true,
      "moduleResolution": "Node",
    "esModuleInterop": true
  },
    "compileOnSave": true,
    "include": [
        "src/**/*", "src/*.json"
    ],
    "exclude": [
    "node_modules"
  ]
}